{
  "name": "fms-core",
  "version": "0.0.3",
  "description": "Modern TypeScript CGMiner API library for Bitcoin miners. Zero dependencies, works with any CGMiner-compatible miner. Includes Avalon-specific extensions for firmware upgrade and MM3 features.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./avalon": {
      "import": "./dist/avalon.js",
      "require": "./dist/avalon.js",
      "types": "./dist/avalon.d.ts"
    }
  },
  "bin": {
    "fmsc": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "INTEGRATION_TESTS=true jest tests/integration",
    "test:miners": "npm run build && ts-node scripts/test-miners.ts",
    "test:pools": "npm run build && ts-node scripts/test-pool-commands.ts",
    "diagnose:miner": "npm run build && ts-node scripts/diagnose-miner.ts",
    "build:scripts": "tsc -p tsconfig.scripts.json",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "cgminer",
    "cgminer-api",
    "bitcoin",
    "miner",
    "mining",
    "bitcoin-miner",
    "miner-management",
    "avalon",
    "canaan",
    "firmware",
    "upgrade",
    "typescript",
    "zero-dependencies"
  ],
  "author": "Canaan",
  "license": "Apache-2.0",
  "homepage": "https://github.com/Canaan-Creative/fms-core#readme",
  "bugs": {
    "url": "https://github.com/Canaan-Creative/fms-core/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Canaan-Creative/fms-core.git"
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md",
    "python-reference/**/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@jest/test-sequencer": "^29.7.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "dotenv": "^17.2.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}
